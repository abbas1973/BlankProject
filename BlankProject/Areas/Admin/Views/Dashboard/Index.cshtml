@model Domain.Entities.UserLog
@using Services.SessionServices
@using Domain.Resources
@using Utilities.Extentions
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var User = Context.Session.GetUser();
}

<div class="col-md-12">
    <h3 class="text-center">به سامانه <b class="text-danger">@Config.SiteNameFa</b> سازمان <b class="text-danger">@Config.OrgName</b> خوش آمدید.</h3>
</div>



<!--مدال اطلاعات و اخرین لاگین-->
<div class="modal fade modal" id="base-modal" tabindex="-1" role="dialog" aria-labelledby="modal5-label" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modal-form">
            <div class="modal-header">
                <button type="button" class="close" title="بستن پنجره" data-dismiss="modal" aria-label="Close" onclick="closeModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="text-center">
                    <h4><b>پیام سامانه</b></h4>
                </div>
                <hr />
            </div>

            <div class="modal-body row">
                <div class="col-md-12">

                    @if (Model != null)
                    {
                        <div class="col-md-10 col-md-offset-1" style="margin-top:-20px;">
                            <i class="material-icons" style="transform: translateY(7px);">event</i>
                            آخرین ورود شما در تاریخ
                            <b> @Model.CreateDate.ToPersianDateTime().ToLongDateString()</b>
                            در ساعت
                            <b> @Model.CreateDate.ToPersianDateTime().ToLongTimeString()</b>
                            با آیپی
                            <b> @Model.UserIp</b>
                            می باشد.
                        </div>
                    }
                    <div class="col-md-10 col-md-offset-1" style="margin-top:50px; margin-bottom: 20px;">
                        <div>
                            <i class="material-icons" style="transform: translateY(7px);">warning</i>
                            <b>توجه داشته باشید که:</b>
                        </div>
                        <div>- تمامی فعالیت های شما در سامانه ثبت گردیده و قابل ردگیری و بازبینی است.</div>
                        <div>- مسئولیت حفاظت از داده هایی که در سامانه به شما نمایش داده می شود، به عهده شما می باشد. در حفظ و نگهداری حساب کاربری خود کوشا باشید. </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts{
    <script>
        var showModal = localStorage.getItem('showDashboardModal');
        console.log(showModal)
        if (showModal != 'false')
            modal.open();


        function closeModal(){
            modal.close();
            localStorage.setItem('showDashboardModal', 'false');
        }
    </script>
}